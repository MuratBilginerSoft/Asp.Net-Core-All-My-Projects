@model List<Word>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/DashboardLayout/Index.cshtml";
}



<div class="d-flex flex-row justify-content-end mb-3 text-center">

    <div class="d-flex justify-content-center align-items-center">
        <span id="message" class="text-light badge badge-sm" style="margin-right: 10px; margin-top:-12px; font-weight:bold; background-color:darkviolet;">@TempData["message"]</span>
    </div>

    <a href="/Word/Create" class="btn btn-dark btn-rounded fw-bold text-center" style="height:30px; font-weight:bold;">Create Word</a>
</div>

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0">
                <h6>Words</h6>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Word</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Meaning</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Synonyms</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center">
                                        No Data
                                    </td>
                                </tr>
                            }

                            else
                            {
                                @foreach (var item in @Model)
                                {

                                    <tr id="row-@item.Id">

                                        <td class="">
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    <img src="/softui/assets/img/team-2.jpg" class="avatar avatar-sm me-3" alt="user1">
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@item.WordName</h6>

                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@item.Meaning</p>
                                        </td>

                                        <td class="align-middle text-center">
                                            <p class="text-xs font-weight-bold mb-0">@item.Synonyms</p>
                                        </td>
                                        <td class="align-center text-center">
                                            <a href="/Word/Detail/@item.Id" class="btn btn-warning text-dark font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Detail Word">
                                                <i class="fas fa-info-circle"></i>
                                            </a>
                                            <a href="/Word/Edit/@item.Id" class="btn btn-dark text-secondary font-weight-bold text-xs text-light" data-toggle="tooltip" data-original-title="Edit Word">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-danger text-secondary font-weight-bold text-xs text-light delete-button" data-id="@item.Id">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </td>
                                    </tr>

                                }
                                
                            }

                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>






