@model Authentication

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />

    <link rel="apple-touch-icon" sizes="76x76" href="/nowui/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="/nowui/assets/img/favicon.png">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">

    <link href="/nowui/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/nowui/assets/css/now-ui-kit.css?v=1.3.0" rel="stylesheet" />
    <link href="/nowui/assets/demo/demo.css" rel="stylesheet" />

    <title>DeveloperEng App - SignUp</title>

</head>

<body class="login-page sidebar-collapse">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-primary fixed-top navbar-transparent " color-on-scroll="400">
        <div class="container">

            <div class="navbar-translate">
                <a class="navbar-brand" href="/" rel="tooltip" title="Designed by Invision. Coded by Creative Tim" data-placement="bottom" target="_blank">
                    DeveloperEng App
                </a>
                <button class="navbar-toggler navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-bar top-bar"></span>
                    <span class="navbar-toggler-bar middle-bar"></span>
                    <span class="navbar-toggler-bar bottom-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse justify-content-end" id="navigation" data-nav-image="/nowui/assets/img/blurred-image-1.jpg">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Auth/SignUp">Sign Up</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->
    <div class="page-header clear-filter" filter-color="blue">
        <div class="page-header-image" style="background-image:url(/nowui/assets/img/19.jpg)"></div>
        <div class="content">
            <div class="container">
                <div class="col-md-4 ml-auto mr-auto">
                    <div class="card card-login card-plain">

                        <form class="form" method="Post" action="/Auth/SignIn">

                            <div class="card-header text-center">
                                <div class="logo-container">
                                    <img src="/nowui/assets/img/now-logo.png" alt="">
                                </div>

                                <h4 style="margin-top:-30px;">Sign In</h4>

                                @if (TempData["ErrorMessage"] != null)
                                {
                                    <span id="message" class="text-white">@TempData["ErrorMessage"]</span>
                                }

                                @if (TempData["SuccessMessage"] != null)
                                {
                                    <span id="message" class="text-white">@TempData["SuccessMessage"]</span>
                                }
                            </div>

                            <div class="card-body">

                                <div class="input-group no-border input-lg">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="now-ui-icons ui-1_email-85"></i>
                                        </span>
                                    </div>

                                    <input type="email" class="form-control" asp-for="Email" placeholder="Email" required>
                                </div>

                                <div class="input-group no-border input-lg">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="now-ui-icons ui-1_lock-circle-open"></i>
                                        </span>
                                    </div>
                                    <input type="password" class="form-control" asp-for="Password" placeholder="Password" required />
                                </div>
                            </div>

                            <div class="card-footer text-center">

                                <button type="submit" class="btn btn-info btn-round btn-lg btn-block">Sign In</button>

                                <div class="pull-right">
                                    <h6>
                                        <a href="/Auth/SignUp" class="link">Create Account</a>
                                    </h6>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <footer class="footer">
            <div class=" container ">
                <nav>
                    <ul>
                        <li>
                            <a href="https://brainytech.net">
                                Brainy Tech
                            </a>
                        </li>

                        <li>
                            <a href="https://muratbilginer.net">
                                Blog
                            </a>
                        </li>
                    </ul>
                </nav>
                <div class="copyright" id="copyright">
                    &copy;
                    <script>
                        document.getElementById('copyright').appendChild(document.createTextNode(new Date().getFullYear()))
                    </script>, Designed & Coded by
                    <a href="https://muratbilginer.net" target="_blank">Murat Bilginer</a>
                </div>
            </div>
        </footer>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var errorMessage = document.getElementById('message');
            if (errorMessage) {
                setTimeout(function () {
                    errorMessage.style.display = 'none';
                }, 5000);
            }
        });
    </script>
    

    <script src="/nowui/assets/js/core/jquery.min.js" type="text/javascript"></script>
    <script src="/nowui/assets/js/core/popper.min.js" type="text/javascript"></script>
    <script src="/nowui/assets/js/core/bootstrap.min.js" type="text/javascript"></script>

    <script src="/nowui/assets/js/plugins/bootstrap-switch.js"></script>

    <script src="/nowui/assets/js/plugins/nouislider.min.js" type="text/javascript"></script>

    <script src="/nowui/assets/js/plugins/bootstrap-datepicker.js" type="text/javascript"></script>

    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>

    <script src="/nowui/assets/js/now-ui-kit.js?v=1.3.0" type="text/javascript"></script>

</body>

</html>